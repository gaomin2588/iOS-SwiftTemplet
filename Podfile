# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'iOS-SwiftTemplet' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

    #网络处理框架 iOS 8.0+
    pod 'Alamofire'
    #网络日志拦截 iOS 9.0+
    pod 'AlamofireNetworkActivityLogger'
    #日志管理框架 iOS 8.0+ 待选择
    pod 'SwiftyBeaver'
    pod 'XCGLogger'
    
    #iOS 8.0+
    pod 'SnapKit'
    #iOS 8.0+
    pod 'ObjectMapper'
    #pod 'AlamofireObjectMapper'
    #iOS 8.0+
    pod 'ESPullToRefresh'
    #图片处理框架
    #pod 'SDWebImage'
    #json 处理框架
    #iOS 8.0+
    pod 'SwiftyJSON'
    
    pod 'MBProgressHUD’
    #键盘处理，不支持iOS8及以下 iOS 9.0+
    pod 'IQKeyboardManagerSwift'
    
    pod "PromiseKit"
    pod 'PromiseKit/Alamofire'
    pod 'CryptoSwift'
    
    
    

end
